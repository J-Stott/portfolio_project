<%- include("partials/header") -%>
<%- user !== null ? include("partials/navbar") : include("partials/navbar-login") -%>

<div class="container">
    <div class="content-container">
        <h1 class="mb-4">Latest Reviews</h1>
        <%if(reviews.length > 0){%>
        <% reviews.forEach((review) => {%>
            <div class="content-wrapper wrapper-style mb-4">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-4 d-flex justify-content-center">
                        <a class="user-link" href="/games/<%=review.gameId.linkName%>"><img class="review-game-art mb-2" src="<%=review.gameId.image%>" alt="profile" /></a>
                    </div>
                    <div class="col-lg-10 col-md-9 col-8">
                        <h1 class="mb-4">
                            <%=review.gameId.displayName%>
                        </h1>
                        <div class="row align-items-center">
                            <div class="col-lg-1 col-md-2 col-3">
                                <img class="review-profile-picture" src="<%=review.author.profileImg%>" alt="profile" />
                            </div>
                            <div class="col-lg-11 col-md-10 col-9">                  
                                <h5>By <a class="user-link" href="/users/<%=review.author.displayName%>"><%=review.author.displayName%></a></h5>
                                <div class="stars">
                                    <%for(let i = 0; i < review.ratings.overall; i++){%>
                                        <i class="far fa-star star-highlight"></i>
                                    <%}%>
                                    <%for(let i = 0; i < 5 - review.ratings.overall; i++){%>
                                        <i class="far fa-star star-lowlight"></i>
                                    <%}%>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <hr class="light" />
                <div class="row">
                    <div class="col-12">
                        <h2><%=review.title%></h2>

                        <%if(review.content.length > 300){%>
                            <p class="review-content"><%=review.content.slice(0, 300)%> ...</p>
                            <%}else{%>
                                <p class="review-content"><%=review.content%></p>
                            <%}%>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-12 d-flex justify-content-end">
                        <a class="btn btn-outline-light" href="/reviews/<%=review._id%>">Read Review</a>
                    </div>
                </div>
            </div>
        <%});%>
        <%}else{%>
            <p>No reviews have been posted :(</p>
        <%}%>
    </div>
</div>

<script type="module" src="/js/scroll_index.js"></script>
<%- include("partials/footer") -%>