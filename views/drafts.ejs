<%- include("partials/header") -%>
<%- include("partials/navbar") -%>

<div class="container">
    <div class="content-container">

        <div id="draft-modal" class="modal">
            <!-- Modal content -->
            <div class="container">
                <div class="modal-content">
                    <p class="warning-text text-center">WARNING - Are you sure you want to delete this draft?</p>
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-center pb-md-0 pb-2">
                            <button class="btn btn-danger ml" id="modal-confirm" type="submit">Delete</button>
                        </div>
                        <div class="col-md-6 d-flex justify-content-center">
                            <button class="btn btn-light" id="modal-close">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h1 class="mb-4">Your Drafts</h1>

        <%if(drafts.length > 0){%>
        <% drafts.forEach((draft) => {%>
            <div class="content-wrapper wrapper-style mb-4">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-4">
                        <a class="user-link" href="/games/<%=draft.gameId.linkName%>"><img class="review-game-art" src="<%=draft.gameId.image%>" alt="game-art" /></a>

                    </div>
                    <div class="col-lg-10 col-md-9 col-8">                  
                        <h1><%=draft.gameId.displayName%></h1>
                        <div class="stars">
                            <%for(let i = 0; i < draft.ratings.overall; i++){%>
                                <i class="far fa-star star-highlight"></i>
                            <%}%>
                            <%for(let i = 0; i < 5 - draft.ratings.overall; i++){%>
                                <i class="far fa-star star-lowlight"></i>
                            <%}%>
                        </div>
                    </div>
                </div>
                <hr class="light" />
                <div class="row">
                    <div class="col-12">
                        <h2><%=draft.title%></h2>

                        <%if(draft.content.length > 300){%>
                            <p class="review-content"><%=draft.content.slice(0, 300)%> ...</p>
                            <%}else{%>
                                <p class="review-content"><%=draft.content%></p>
                            <%}%>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-12 d-flex justify-content-end">

                        <button class="btn btn-danger mr-2 delete-draft" data-draft-id="<%=draft._id%>" type="submit">Delete Draft</button>
                        
                        <a class="btn btn-outline-light" href="/drafts/<%=draft._id%>/edit">Edit Draft</a>
                    </div>
                </div>
            </div>
        <%});%>
        <%} else {%>
            <p>You have no drafts</p>
        <%}%>
    </div>
</div>

<script type="module" src="/js/draft_modal.js"></script>
<script type="module" src="/js/scroll_draft.js"></script>
<%- include("partials/footer") -%>