<%- include("partials/header") -%>
<%- user !== null ? include("partials/navbar") : include("partials/navbar-login") -%>

<div class="container">
    <div class="content-container">

        <div id="myModal" class="modal">
            <!-- Modal content -->
            <div class="container">
                <div class="modal-content">
                    <p class="warning-text text-center">WARNING - Are you sure you want to delete this review?</p>
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-center pb-md-0 pb-2">
                            <form action="/reviews/<%=review._id%>/delete" method="post">
                                <button class="btn btn-danger ml" type="submit">Delete</button>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex justify-content-center">
                            <button class="btn btn-light" id="close">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="content-wrapper wrapper-style mb-4">
            <div class="row">
                <div class="col-lg-2 col-md-3 col-4 d-flex justify-content-center">
                    <a href="/games/<%=review.gameId.linkName%>"><img class="review-game-art mb-2" src="<%=review.gameId.image%>" alt="profile" /></a>
                </div>
                <div class="col-lg-10 col-md-9 col-8">
                    <h1 class="mb-4"><%=review.gameId.displayName%></h1>
                    <div class="row align-items-begin">
                        <div class="col-lg-1 col-md-2 col-3">
                            <img class="review-profile-picture" src="<%=review.author.profileImg%>" alt="profile" />
                        </div>
                        <div class="col-lg-11 col-md-10 col-9">                  
                            <h5>By <a class="user-link" href="/users/<%=review.author.displayName%>"><%=review.author.displayName%></a></h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.overall; i++){%>
                                    <i class="far fa-star star-highlight head-star-size"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.overall; i++){%>
                                    <i class="far fa-star star-lowlight head-star-size"></i>
                                <%}%>
                            </div>
                            <p>Published on <%=review.created.toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' })%></p>
                        </div>
                    </div>

                </div>
            </div>
            <hr class="light" />
            <div class="row">
                <div class="col-12">
                    <h1 class="mb-4"><%=review.title%></h1>
                    <p class="review-content"><%=review.content%></p>
                </div>
            </div>
            <hr class="light" />
            <div class="row ">
                <div class="col-12">
                    <h3>Ratings</h3>
                    <div class="row row-cols-xl-5 row-cols-lg-3 row-cols-md-3 row-cols-2">
                        <div class="col">
                            <h5>Gameplay</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.gameplay; i++){%>
                                    <i class="far fa-star star-highlight star-size"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.gameplay; i++){%>
                                    <i class="far fa-star star-lowlight star-size"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Visuals</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.visuals; i++){%>
                                    <i class="far fa-star star-highlight star-size"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.visuals; i++){%>
                                    <i class="far fa-star star-lowlight star-size"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Audio</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.audio; i++){%>
                                    <i class="far fa-star star-highlight star-size"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.audio; i++){%>
                                    <i class="far fa-star star-lowlight star-size"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Story</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.story; i++){%>
                                    <i class="far fa-star star-highlight star-size"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.story; i++){%>
                                    <i class="far fa-star star-lowlight star-size"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Overall</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.overall; i++){%>
                                    <i class="far fa-star star-highlight star-size"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.overall; i++){%>
                                    <i class="far fa-star star-lowlight star-size"></i>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row ">
                <div class="col-12 d-flex justify-content-md-end justify-content-center mt-3">
                     <button class="btn btn-outline-light rating-size" id="informative" name="informative" title="informative" <%if(user === null || String(review.author._id) == String(user._id)){%>
                        disabled
                    <%}%>><i class="fas fa-info-circle"></i> <span id="informative-span"><%=review.reactions.reaction.informative%></span></button>

                     <button class="btn btn-outline-light ml-2 rating-size" id="funny" name="funny" title="funny" <%if(user === null || String(review.author._id) == String(user._id)){%>
                        disabled
                    <%}%>><i class="far fa-grin-squint-tears"></i> <span id="funny-span"><%=review.reactions.reaction.funny%></span></button>

                     <button class="btn btn-outline-light ml-2 rating-size" id="troll" name="troll" title="troll" <%if(user === null || String(review.author._id) == String(user._id)){%>
                        disabled
                    <%}%>><i class="far fa-meh-rolling-eyes"></i> <span id="troll-span"><%=review.reactions.reaction.troll%></span></button>
                </div>
            </div>
                
            <%if(user !== null && (user.roles.includes("admin") || String(review.author._id) == String(user._id))){%>
            <div class="row ">
                <div class="col-12 d-flex justify-content-md-end justify-content-center mt-3">

                        <%if(String(review.author._id) == String(user._id)){%>
                        <a class="btn btn-outline-light mr-2" href="/reviews/<%=review._id%>/edit">Edit</a>
                        <%}%>
                        <%if((user.roles.includes("admin") || String(review.author._id) == String(user._id))){%>
                        <button class="btn btn-danger" type="submit" id="delete">Delete Review</button>
                        <%}%>
                </div>
            </div>
            <%}%>
        </div>

        <%if(locals.comments){ %>
        <div class="content-wrapper wrapper-style mb-4" id="comments-container">
            <h3>Discussion</h3>
            <hr class="light" />
            <%if(user !== null) {%>
            <div class="row ">
                <div class="col-12 mt-3">
                    <textarea class="form-control" name="comment" id="comment-text" placeholder="Add comment here" rows="3" required></textarea>
                </div>

                <div class="col-12 d-flex justify-content-md-end justify-content-center mt-3">
                    <button class="btn btn-outline-light mb-4" id="comment-submit">Comment!</button>
                </div>
            </div>

            <%}%>

            <%if(comments.length > 0){%>
            <% comments.forEach((comment) => {%>
                <div class="content-wrapper wrapper-style mb-4">
                    <div class="row comment-container" data-user-id="<%=comment.user._id%>" data-comment-id="<%=comment._id%>">
                        <div class="col-md-2 col-4 d-flex flex-column align-items-center">
                            <img class="review-profile-picture" src="<%=comment.user.profileImg%>" alt="profile" />
                            <p><%=comment.user.displayName%></p>
                        </div>
                        <div class="col-md-10 col-8">
                            <p class="comment"><%=comment.comment%></p>
                        </div>
                        <%if(user !== null && (user.roles.includes("admin") || String(review.author._id) == String(user._id))){%>
                            
                            <div class="col-12 d-flex justify-content-md-end justify-content-center mt-3">
                                <button class="btn btn-outline-light comment-edit">Edit Comment</button>
                                <button class="btn btn-danger ml-2 comment-delete">Delete Comment</button>
                            </div>
                            
                        <%}%>
                    </div>
                    
                </div>
            <%});%>
        </div>
        <%}else{%>
            <p>No comments have been posted</p>
        <%}%>
        <%}%>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script type="text/javascript" src="/js/ratings.js"></script>
<script type="text/javascript" src="/js/modal.js"></script>
<script type="module" src="/js/comments.js"></script>
<%- include("partials/footer") -%>