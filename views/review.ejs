<%- include("partials/header") -%>
<%- user !== null ? include("partials/navbar") : include("partials/navbar-login") -%>

<div class="container">
    <div class="content-container">

        <div id="myModal" class="modal">
            <!-- Modal content -->
            <div class="container">
                <div class="modal-content">
                    <p class="warning-text text-center">WARNING - Are you sure you want to delete this review?</p>
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-center pb-md-0 pb-2">
                            <form action="/reviews/<%=review._id%>/delete" method="post">
                                <button class="btn btn-danger ml" type="submit">Delete</button>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex justify-content-center">
                            <button class="btn btn-light" id="close">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="review-wrapper wrapper-style mb-4">
            <div class="row">
                <div class="col-lg-2 col-md-3 col-4 d-flex justify-content-center">
                    <img class="profile-picture mb-2" src="<%=review.author.profileImg%>" alt="profile" />
                </div>
                <div class="col-lg-10 col-md-9 col-8">
                    <h1><%=review.gameData.gameTitle%></h1>
                    <h5>By <a class="user-link" href="/users/<%=review.author.displayName%>"><%=review.author.displayName%></a></h5>
                    <div class="stars">
                        <%for(let i = 0; i < review.ratings.overall; i++){%>
                            <i class="far fa-star star-highlight"></i>
                        <%}%>
                        <%for(let i = 0; i < 5 - review.ratings.overall; i++){%>
                            <i class="far fa-star star-lowlight"></i>
                        <%}%>
                    </div>
                </div>
            </div>
            <hr class="light" />
            <div class="row">
                <div class="col-12">
                    <h1 class="mb-4"><%=review.title%></h1>
                    <p class="review-content"><%=review.content%></p>
                </div>
            </div>
            <hr class="light" />
            <div class="row ">
                <div class="col-12">
                    <h3>Ratings</h3>
                    <div class="row row-cols-lg-5 row-cols-md-3 row-cols-2">
                        <div class="col">
                            <h5>Gameplay</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.gameplay; i++){%>
                                    <i class="far fa-star star-highlight"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.gameplay; i++){%>
                                    <i class="far fa-star star-lowlight"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Visuals</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.visuals; i++){%>
                                    <i class="far fa-star star-highlight"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.visuals; i++){%>
                                    <i class="far fa-star star-lowlight"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Audio</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.audio; i++){%>
                                    <i class="far fa-star star-highlight"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.audio; i++){%>
                                    <i class="far fa-star star-lowlight"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Story</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.story; i++){%>
                                    <i class="far fa-star star-highlight"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.story; i++){%>
                                    <i class="far fa-star star-lowlight"></i>
                                <%}%>
                            </div>
                        </div>

                        <div class="col">
                            <h5>Overall</h5>
                            <div class="stars">
                                <%for(let i = 0; i < review.ratings.overall; i++){%>
                                    <i class="far fa-star star-highlight"></i>
                                <%}%>
                                <%for(let i = 0; i < 5 - review.ratings.overall; i++){%>
                                    <i class="far fa-star star-lowlight"></i>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row ">
                <div class="col-12 d-flex justify-content-md-end justify-content-center mt-3">
                     <button class="btn btn-light" id="informative" name="informative" <%if(user === null || String(review.author._id) == String(user._id)){%>
                        disabled
                    <%}%>>Informative: <span id="inform-span"><%=review.reactions.reaction.informative%></span></button>

                     <button class="btn btn-light ml-2" id="funny" name="funny" <%if(user === null || String(review.author._id) == String(user._id)){%>
                        disabled
                    <%}%>>Funny: <span id="funny-span"><%=review.reactions.reaction.funny%></span></button>

                     <button class="btn btn-light ml-2" id="troll" name="troll" <%if(user === null || String(review.author._id) == String(user._id)){%>
                        disabled
                    <%}%>>Troll: <span id="troll-span"><%=review.reactions.reaction.troll%></span></button>
                </div>
            </div>
                
            <%if(user !== null && String(review.author._id) == String(user._id)){%>
            <div class="row ">
                <div class="col-12 d-flex justify-content-end mt-3">
                    
                        <a class="btn btn-outline-light mr-2" href="/reviews/<%=review._id%>/edit">Edit</a>
                        <button class="btn btn-danger" type="submit" id="delete">Delete Review</button>
                </div>
            </div>
            <%}%>
        </div>

    </div>
</div>

<script type="text/javascript" src="/js/ratings.js"></script>
<script type="text/javascript" src="/js/modal.js"></script>
<%- include("partials/footer") -%>