<%- include("partials/header") -%>
<%- include("partials/navbar") -%>
<div class="container">
    <div class="content-container">

        <div id="myModal" class="modal">
            <!-- Modal content -->
            <div class="container">
                <div class="modal-content">
                    <p class="warning-text">WARNING - Deleting your account will remove all of your reviews. This cannot
                        be reversed.</p>
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-center pb-md-0 pb-2">
                            <form action="/profile/delete" method="post">
                                <button class="btn btn-danger" type="submit">Delete Account</button>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex justify-content-center">
                            <button class="btn btn-light" id="close">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="pb-4">Profile Settings</h2>

        <div class="profile-section wrapper-style">
            <div class="row">
                <div class="col-md-5 d-flex flex-column align-items-center">
                    <h4 class="profile-section-heading">Profile Picture</h4>
                    <img class="profile-picture mb-2" src="<%=user.profileImg%>" alt="profile" />
                </div>

                <div class="col-md-7">
                    <form class="profile-image-margin" action="/profile/updateImage" method="post"
                        enctype="multipart/form-data">
                        <div class="form-row align-items-center justify-content-md-start justify-content-center">
                            <div class="col-10 my-1">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="inputGroupFile01" accept="image/jpeg, image/png" name="profile"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                </div>
                            </div>
                            <div class="col-10 my-1">
                                <button type="submit" class="btn btn-light form-control">Upload</button>
                            </div>

                            <% if(locals.imageMessage) {%>
                            <p class="warning-text"><%=imageMessage%></p>
                            <%}%>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="profile-section wrapper-style">

            <div class="row">
                <div class="col-md-5 d-flex justify-content-center">
                    <h5 class="profile-section-heading">Display Name</h5>
                </div>

                <div class="col-md-7">
                    <form class="display-name-margin" action="/profile/updateName" method="post">
                        <div class="form-row align-items-center justify-content-md-start justify-content-center">
                            <div class="col-10 my-1">
                                <input class="form-control" type="text" name="displayName" id="" value="<%=user.displayName%>">
                            </div>
                            <div class="col-10 my-1">
                                <button type="submit" class="btn btn-light form-control">Change</button>
                            </div>
                            <div class="col-10 my-1 d-flex justify-content-md-start justify-content-center">
                                <p>Can alter the casing of your display name only</p>
                                <% if(locals.userMessage) {%>
                                <p class="warning-text"><%=userMessage%></p>
                                <%}%>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="profile-section wrapper-style">

            <div class="row">
                <div class="col-md-5 d-flex justify-content-center">
                    <h5 class="profile-section-heading">Change Password</h5>
                </div>

                <div class="col-md-7 ">
                    <form class="display-name-margin" action="/profile/updatePassword" method="post">
                        <div class="form-row align-items-center justify-content-md-start justify-content-center">
                            <div class="col-10 my-1">
                                <input class="form-control" placeholder="Old Password" type="password" name="oldPassword" id="" required />
                            </div>
                            <div class="col-10 my-1">
                                <input class="form-control" placeholder="New Password" type="password" name="newPassword" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                                title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" required/>
                            </div>
                            <div class="col-10 my-1">
                                <input class="form-control" placeholder="Confirm Password" type="password" name="newPasswordConfirm" id="password-confirm" required>
                            </div>
                            <div class="col-10 my-1">
                                <button type="submit" class="btn btn-light form-control">Change Password</button>
                            </div>
                        </div>
                        <% if(locals.passwordMessage) {%>
                        <p class="warning-text"><%=passwordMessage%></p>
                        <%}%>
                    </form>
                </div>
            </div>
        </div>

        <div class="profile-section wrapper-style">

            <div class="row">
                <div class="col-md-5 d-flex justify-content-center align-items-center">
                    <h5>Delete Account</h5>
                </div>

                <div class="col-md-7 d-flex justify-content-md-start justify-content-center">
                    <button class="btn btn-danger" id="delete_account">Delete Account</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/modal.js"></script>
<script type="text/javascript" src="/js/password.js"></script>
